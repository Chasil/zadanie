{% extends 'base.html.twig' %}

{% block title %}Weater Information{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col-sm-6 col-md-6 d-flex align-items-center justify-content-center">
                <div class="d-flex mt-5">
                    <div class="d-flex flex-column mb-4">
                        <h1 class="text-center mb-4 h4">Pass city and country to see average temperature.</h1>
                        {{  form_start(form, {'attr': {'class': 'd-flex flex-column mb-4'}}) }}
                            {{ form_row(form.city) }}
                            {{ form_row(form.country) }}
                            <input type="submit" value="Check" class="form-control btn btn-success w-50 align-self-center" />
                        {{ form_end(form) }}

                        {% for message in app.flashes('notice') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">
                                {{ message }}
                            </div>
                        {% endfor %}

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

        </div>


    </div>
{% endblock %}
